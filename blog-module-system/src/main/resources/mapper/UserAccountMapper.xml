<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.manpowergroup.springboot.springboot3web.system.mapper.UserAccountMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.manpowergroup.springboot.springboot3web.system.entity.UserAccount">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="account_type" property="accountType" />
        <result column="account_value" property="accountValue" />
        <result column="password" property="password" />
        <result column="verified" property="verified" />
        <result column="status" property="status" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="is_deleted" property="isDeleted" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, account_type, account_value, password, verified, status, created_at, updated_at, is_deleted
    </sql>
    <select id="findLoginUserByAccountTypeAndAccountValue"
            resultType="com.manpowergroup.springboot.springboot3web.system.dto.LoginAccountUserDTO">

        SELECT u.id             AS userId,
               ua.id            AS accountId,
               u.nick_name      AS nickName,
               ua.account_type  AS accountType,
               ua.account_value AS accountValue,

               u.status         AS userStatus,
               ua.status        AS accountStatus,
               ua.verified      AS verified,

               ua.password      AS password
        FROM t_sys_user u
                 JOIN t_sys_user_account ua
                      ON u.id = ua.user_id
        WHERE ua.account_type = #{accountType}
          AND ua.account_value = #{accountValue}
          AND u.is_deleted = 0
          AND ua.is_deleted = 0 LIMIT 1;

    </select>


</mapper>
